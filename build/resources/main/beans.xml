<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:p="http://www.springframework.org/schema/p"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <bean id="tea" class="entity.Tea" name="hotDrink"></bean>
    <bean id="expressTea" class="entity.ExpressTea"></bean>
    <bean id="restaurant1" class="entity.Restaurant" autowire="byName"></bean>
    <!--<bean id="restaurant2" class="entity.Restaurant" autowire="byType"></bean>-->
    <bean id="restaurant3" class="entity.Restaurant" autowire="constructor"></bean>

    <bean id="teaRestaurant" class="entity.Restaurant" scope="prototype">
        <property name="hotDrink" ref="tea"></property>
    </bean>
</beans>